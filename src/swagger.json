{
  "openapi": "3.0.0",
  "info": {
    "title": "Bico.com API",
    "description": "Essa API tem como objetivo o cadastro de servicos e seus prestadores",
    "termsOfService": "http://localhost:3000/terms",
    "contact": {
      "email": "JohnDoe@kenzie.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "api para testes"
    },
    {
      "url": "linkDoDeploy.com",
      "description": "api de producao"
    }
  ],
  "paths": {
    "/user/signup": {
      "post": {
        "summary": "Cadastro de users",
        "description": " post de novos users ",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "John Doe",
                    "email": "JohnDoe@kenzie.com",
                    "password": "1234",
                    "phone": "9999-9999"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User Created!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "409": {
            "description": "Email already exists!"
          }
        }
      }
    },
    "/user/signin": {
      "post": {
        "summary": "login de users",
        "description": "Post de login de users",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "JohnDoe@kenzie.com",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "user logged in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "summary": "Lista um users",
        "description": "get de list de users",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "userId": "userId",
            "in": "request",
            "description": "Busca um user ",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "List of User",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        }
      }
    },
    "secutirySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
